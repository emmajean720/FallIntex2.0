        }

        .main-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 90vh;
            padding: 20px;
        }

        .form-container {
            width: 90%;
            max-width: 1210px;
            margin: 30px auto; /* Increased margin to create better spacing between cards */
            background: white;
            border: 1px solid #ddd;
            border-radius: 8px; /* Slightly increased border-radius for a more modern look */
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Smooth transition for hover effects */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .form-container h1 {
            text-align: center;
            color: #444;
            font-size: 1.8em;
            margin-bottom: 20px;
        }

        .form-container form {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .form-group {
            flex: 1 1 30%;
            min-width: 200px;
        }

        .form-container label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        .form-container input[type="text"],
        .form-container input[type="number"],
        .form-container input[type="date"],
        .form-container select {
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
        }

        /* Buttons for Forms */
        .form-button {
            background-color: #008080;
            color: white;
            padding: 0.7rem 1.5rem;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            display: block;
            width: 100%;
        }
        .form-btn:hover {
            background-color: #005F5F;
        }

        /*css fro cards on admin events page*/
        .bigcard {
            width: 90%;
            max-width: 1250px;
            margin: 30px auto; /* Increased margin to create better spacing between cards */
            background: white;
            border: 1px solid #ddd;
            border-radius: 8px; /* Slightly increased border-radius for a more modern look */
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Smooth transition for hover effects */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            
        }

        .card-header {
            padding: 20px; /* Increased padding for more spacious header */
            background: #008080; /* Updated background color to match the theme (teal) */
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background-color 0.3s ease; /* Smooth transition for hover effect */
            font-size: 2rem; /* Larger font size */
        }

        .form-container button[type="submit"]:hover {
            background-color: #008080;
        }

        .success-message,
        .error-message {
            text-align: center;
            font-size: 1em;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .success-message {
            color: #155724;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }

        .error-message {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }

        .records-container {
            width: 100%;
            max-width: 1000px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
