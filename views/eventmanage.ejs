<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management</title>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Nav Bar -->
    <%- include("partials/adminnavbar") %>
    <div class="main-content">
        <div class="table-container">
            <h1>Manage Events</h1>
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            <table class="event-table">
                <thead>
                    <tr>
                        <th>Event Code</th>
                        <th>Organization</th>
                        <th>Start Time</th>
                        <th>Stop Time</th>
                        <th>Contact Name</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach(event => { %>
                        <% if (event.status !== 'completed') { %> <!-- Hide events that are marked as completed -->
                            <tr>
                                <td><%= event.eventcode %></td>
                                <td><%= event.organization %></td>
                                <td><%= event.eventstarttime %></td>
                                <td><%= event.eventstoptime %></td>
                                <td><%= event.orgfirstname %> <%= event.orglastname %></td>
                                <td>
                                    <form action="/update-event-status/<%= event.eventcode%>" method="POST">
                                        <select name="status" onchange="this.form.submit()">
                                            <option value="pending" <%= event.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="approved" <%= event.status === 'approved' ? 'selected' : '' %>>Approved</option>
                                            <option value="declined" <%= event.status === 'declined' ? 'selected' : '' %>>Declined</option>
                                            <option value="completed" <%= event.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                        </select>
                                    </form>
                                </td>
                                <td>
                                    <button class="complete-btn" onclick="toggleCompleteForm('<%= event.eventcode %>')">Mark as Completed</button>
                                    <form action="/delete-event/<%= event.eventcode %>" method="POST" style="display:inline;">
                                        <button type="submit" class="delete-btn">Delete</button>
                                    </form>
                                    <button class="edit-btn" onclick="toggleEditForm('<%= event.eventcode %>')">Edit</button>
                                </td>
                            </tr>
                            <tr id="edit-form-<%= event.eventcode %>" style="display:none;">
                                <td colspan="7">
                                    <form action="/edit-event/<%= event.eventcode %>" method="POST" class="edit-event-form">
                                        <label>Organization Name:</label>
                                        <input type="text" name="organization" value="<%= event.organization %>">
                                        <label>Start Time:</label>
                                        <input type="datetime-local" name="eventstarttime" value="<%= new Date(event.eventstarttime).toISOString().slice(0,16) %>">
                                        <label>Stop Time:</label>
                                        <input type="datetime-local" name="eventstoptime" value="<%= new Date(event.eventstoptime).toISOString().slice(0,16) %>">
                                        <label>Contact Name:</label>
                                        <input type="text" name="orgfirstname" value="<%= event.orgfirstname %>">
                                        <input type="text" name="orglastname" value="<%= event.orglastname %>">
                                        <label>Status:</label>
                                        <select name="status">
                                            <option value="pending" <%= event.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                            <option value="approved" <%= event.status === 'approved' ? 'selected' : '' %>>Approved</option>
                                            <option value="declined" <%= event.status === 'declined' ? 'selected' : '' %>>Declined</option>
                                            <option value="completed" <%= event.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                        </select>
                                        <button type="submit">Save Changes</button>
                                    </form>
                                </td>
                            </tr>

                            <tr id="complete-form-<%= event.eventcode %>" style="display:none;">
                                <td colspan="7">
                                    <form action="/complete-event/<%= event.eventcode %>" method="POST" class="edit-event-form">
                                        <label>Actual number of participants:</label>
                                        <input type="number" name="actualparticipation" value="<%= event.actualparticipation %>" placeholder="0">
                                        <p>Vests:
                                            <label>Cut:</label>
                                            <input type="number" name="vestcut" value="<%= event.vestcut %>" placeholder="0">
                                            <label>Pinned:</label>
                                            <input type="number" name="vestpin" value="<%= event.vestpin %>" placeholder="0">
                                            <label>Sewn:</label>
                                            <input type="number" name="vestsewn" value="<%= event.vestsewn %>" placeholder="0">
                                        <p>Collars:</p>
                                            <label>Cut:</label>
                                            <input type="number" name="collarcut" value="<%= event.collarcut %>" placeholder="0">
                                            <label>Pinned:</label>
                                            <input type="number" name="collarpin" value="<%= event.collarpin %>" placeholder="0">
                                            <label>Sewn:</label>
                                            <input type="number" name="collarsewn" value="<%= event.collarsewn %>" placeholder="0">
                                        <p>Envelopes:</p>
                                            <label>Cut:</label>
                                            <input type="number" name="envelopecut" value="<%= event.envelopecut %>" placeholder="0">
                                            <label>Pinned:</label>
                                            <input type="number" name="envelopepin" value="<%= event.envelopepin %>" placeholder="0">
                                            <label>Sewn:</label>
                                            <input type="number" name="envelopesewn" value="<%= event.envelopesewn %>" placeholder="0">
                                        <p>Pockets:</p>
                                            <label>Cut:</label>
                                            <input type="number" name="pocketcut" value="<%= event.pocketcut %>" placeholder="0">
                                            <label>Pinned:</label>
                                            <input type="number" name="pocketpin" value="<%= event.pocketpin %>" placeholder="0">
                                            <label>Sewn:</label>
                                            <input type="number" name="pocketssewn" value="<%= event.pocketssewn %>" placeholder="0">
                                        <p>Completed Vests:</p>
                                            <label>X-Small:</label>
                                            <input type="number" name="xscompleted" value="<%= event.xscompleted %>" placeholder="0">
                                            <label>Small:</label>
                                            <input type="number" name="scompleted" value="<%= event.scompleted %>" placeholder="0">
                                            <label>Medium:</label>
                                            <input type="number" name="mcompleted" value="<%= event.mcompleted %>" placeholder="0">
                                            <label>Large:</label>
                                            <input type="number" name="lcompleted" value="<%= event.lcompleted %>" placeholder="0">
                                            <label>X-Large:</label>
                                            <input type="number" name="xlcompleted" value="<%= event.xlcompleted %>" placeholder="0">
                                            <label>XX-Large:</label>
                                            <input type="number" name="xxlcompleted" value="<%= event.xxlcompleted %>" placeholder="0">
                                            <label>XXX-Large:</label>
                                            <input type="number" name="xxxlcompleted" value="<%= event.xxxlcompleted  %>" placeholder="0">
                                            <label>XXX-Large:</label>
                                            <input type="number" name="xxxxlcompleted" value="<%= event.xxxxlcompleted %>" placeholder="0">
                                        <button type="submit">Save Changes</button>
                                    </form>
                                </td>
                            </tr>

                        <% } %>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Footer -->
    <%- include("partials/footer") %>
    <script>
        function toggleEditForm(eventCode) {
            const formRow = document.getElementById(`edit-form-${eventCode}`);
            formRow.style.display = formRow.style.display === 'none' ? '' : 'none';
        }
        function toggleCompleteForm(eventCode) {
            const formRow = document.getElementById(`complete-form-${eventCode}`);
            formRow.style.display = formRow.style.display === 'none' ? '' : 'none';
        }
    </script>
</body>
</html>
