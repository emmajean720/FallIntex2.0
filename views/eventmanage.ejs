                        <input type="number" id="basicskills" name="basicskills" placeholder="Basic" style="width: 15%" min="0">
                        <input type="number" id="advanced" name="advanced" placeholder="Advanced" style="width: 15%" min="0">
                        <input type="number" id="sewingmachines" name="sewingmachines" placeholder="Sewing" style="width: 15%" min="0">
