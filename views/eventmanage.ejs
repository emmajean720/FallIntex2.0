<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management</title>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            color: #333;
        }

        .main-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 90vh;
            padding: 20px;
        }

        .form-container {
            width: 90%;
            max-width: 1210px;
            margin: 30px auto; /* Increased margin to create better spacing between cards */
            background: white;
            border: 1px solid #ddd;
            border-radius: 8px; /* Slightly increased border-radius for a more modern look */
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Smooth transition for hover effects */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .form-container h1 {
            text-align: center;
            color: #444;
            font-size: 1.8em;
            margin-bottom: 20px;
        }

        .form-container form {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .form-container label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
            color: #555;
        }

        .form-container input[type="text"]{
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
        }
       
        .form-container input[type="number"]{
            padding: 10px;
            width: 15%;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
        }

        .form-container input[type="datetime-local"]{
            padding: 10px;
            width: 40%;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
        }
    
        .form-container select {
            padding: 10px;
            width: 30%;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
        }
        .form-container input[type="tel"] {
            padding: 10px;
            width: 25%;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
        }
        .form-container input[type="email"] {
            padding: 10px;
            width: 35%;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
        }

        .form-container input[type="radio"] {
            padding: 10px;
            width: 5%;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
        }
        /* Buttons for Forms */
        .form-button {
            background-color: #008080;
            color: white;
            padding: 0.7rem 1.5rem;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            display: block;
            width: 100%;
        }
        .form-btn:hover {
            background-color: #005F5F;
        }

        /*css fro cards on admin events page*/
        .bigcard {
            width: 90%;
            max-width: 1250px;
            margin: 30px auto; /* Increased margin to create better spacing between cards */
            background: white;
            border: 1px solid #ddd;
            border-radius: 8px; /* Slightly increased border-radius for a more modern look */
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Smooth transition for hover effects */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            
        }

        .card-header {
            padding: 20px; /* Increased padding for more spacious header */
            background: #008080; /* Updated background color to match the theme (teal) */
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background-color 0.3s ease; /* Smooth transition for hover effect */
            font-size: 2rem; /* Larger font size */
        }

        .form-container button[type="submit"]:hover {
            background-color: #008080;
        }

        .success-message,
        .error-message {
            text-align: center;
            font-size: 1em;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .success-message {
            color: #155724;
            background-color: #d4edda;
            border: 1px solid #c3e6cb;
        }

        .error-message {
            color: #721c24;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
        }

        .records-container {
            width: 100%;
            max-width: 1000px;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .search-container {
            margin-bottom: 20px;
            text-align: right;
        }

        .search-container input[type="text"] {
            padding: 8px;
            border-radius: 5px;
            border: 1px solid #ddd;
            font-size: 1em;
            width: 200px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <!-- Nav Bar -->
    <%- include(user && user.is_admin ? "partials/adminnavbar" : (user ? "partials/volunteernavbar" : "partials/navbar")) %>
    <div class="main-content">

