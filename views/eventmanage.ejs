        <!--declined events-->
        <div class="bigcard">
            <div class="card-header">Declined Events</div>
            <div class="card-content">
                <div class="container">
                    <h1>Declined Events</h1>
                    <% if (error) { %>
                        <div class="error-message"><%= error %></div>
                    <% } %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Organization</th>
                                <th>Event Date(s)</th>
                                <th>Event Times</th>
                                <th>Event Address</th>
                                <th>Contact Name</th>
                                <th>Contact Email</th>
                                <th>Contact Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% events.forEach(event => { %>
                                <% if (event.status == 'declined') { %> <!-- Hide events that are marked as completed -->
                                    <tr>
                                        <td><%= event.organization %></td>
                                        <td><%= new Date(event.eventstarttime).toLocaleDateString() %>    <% if (new Date(event.eventstarttime).toLocaleDateString() !== new Date(event.eventstoptime).toLocaleDateString()) { %>
                                            - <%= new Date(event.eventstoptime).toLocaleDateString() %>
                                        <% } %></td>
                                        <td>
                                            <%= new Date(event.eventstarttime).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true }).replace(/([APM]{2})$/, '') %>-
                                            <%= new Date(event.eventstoptime).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                                        </td>
                                        <td><%= event.eventaddress %>, <%= event.eventcity %>, <%= event.state_description %></td>
                                        <td><%= event.orgfirstname %> <%= event.orglastname %></td>
                                        <td><%= event.orgemail %></td>
                                        <td><%= event.orgphone %></td>
                                        <td>
                                            <form action="/update-event-status/<%= event.eventcode%>" method="POST">
                                                <select name="status" onchange="this.form.submit()">
                                                    <option value="pending" <%= event.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                                    <option value="approved" <%= event.status === 'approved' ? 'selected' : '' %>>Approved</option>
                                                    <option value="declined" <%= event.status === 'declined' ? 'selected' : '' %>>Declined</option>
                                                    <option value="completed" <%= event.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                                </select>
                                            </form>
                                        </td>
                                        <td>
                                            <button class="form-button" onclick="toggleEditForm('<%= event.eventcode %>')">View/Edit</button>
                                            <form action="/delete-event/<%= event.eventcode %>" method="POST" style="display:inline;">
                                                <button type="submit" class="form-button" style="background-color: #a30202 " onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <!-- Include the edit event form partial -->
                                    <%- include('partials/eventedit', { event: event }) %>
                                <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <%- include("partials/footer") %>
    <script>
        function toggleEditForm(eventCode) {
            const formRow = document.getElementById(`edit-form-${eventCode}`);
            formRow.style.display = formRow.style.display === 'none' ? '' : 'none';
        }
        function toggleCompleteForm(eventCode) {
            const formRow = document.getElementById(`complete-form-${eventCode}`);
            formRow.style.display = formRow.style.display === 'none' ? '' : 'none';
        }
        document.querySelectorAll('.card-header').forEach(header => {
        header.addEventListener('click', () => {
            const card = header.parentElement;
            card.classList.toggle('open');
        });
        });

        function toggleSewingQuestions(value) {
            const sewingQuestions = document.querySelector('.sewing-questions');
            // Check if the selected value is either "Sewing" (1) or "Both" (3)
            if (value === "1" || value === "3") {
                sewingQuestions.style.display = 'block'; // Show the sewing questions
            } else {
                sewingQuestions.style.display = 'none'; // Hide the sewing questions
            }
        }

        // format phone number when its entered - Kylee Brown
        const phoneInput = document.getElementById('orgphone');

        phoneInput.addEventListener('input', (e) => {
            let value = e.target.value.replace(/\D/g, ''); // Remove all non-numeric characters
            if (value.length > 10) value = value.slice(0, 10); // Limit to 10 digits

            // Format the value as (123) 456-7890
            if (value.length > 6) {
                value = `(${value.slice(0, 3)}) ${value.slice(3, 6)}-${value.slice(6)}`;
            } else if (value.length > 3) {
                value = `(${value.slice(0, 3)}) ${value.slice(3)}`;
            } else if (value.length > 0) {
                value = `(${value}`;
            }

            e.target.value = value; // Update the input value with the formatted string
        });

    </script>
</body>
