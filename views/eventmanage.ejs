                <div> 
                    <label for="expectedparticipants">Expected Participants:</label>
                    <input type="number" id="expectedparticipants" name="expectedparticipants" min="1" style="width: 100%" placeholder= 0 required>
                </div>

                <div> 
                    <label for="servicetypecode">Type of Service:</label>
