                </div>

                <button type="submit" class="form-button">Create Event</button>
            </form>
        </div> 
        </div>

        </div>



        <!--pending-->
        <div class="bigcard">
            <div class="card-header">Pending Events</div>
            <div class="card-content">
                <div class="container">
                    <% if (error) { %>
                        <div class="error-message"><%= error %></div>
                    <% } %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Organization</th>
                                <th>Event Date(s)</th>
                                <th>Event Times</th>
                                <th>Event Address</th>
                                <th>Contact Name</th>
                                <th>Contact Email</th>
                                <th>Contact Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% events.forEach(event => { %>
                                <% if (event.status == 'pending') { %>
                                    <tr>
                                        <td><%= event.organization %></td>
                                        <td><%= new Date(event.eventstarttime).toLocaleDateString() %>    <% if (new Date(event.eventstarttime).toLocaleDateString() !== new Date(event.eventstoptime).toLocaleDateString()) { %>
                                            - <%= new Date(event.eventstoptime).toLocaleDateString() %>
                                        <% } %></td>
                                        <td>
                                            <%= new Date(event.eventstarttime).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true }).replace(/([APM]{2})$/, '') %>-
                                            <%= new Date(event.eventstoptime).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                                        </td>
                                        <td><%= event.eventaddress %>, <%= event.eventcity %>, <%= event.state_description %></td>
                                        <td><%= event.orgfirstname %> <%= event.orglastname %></td>
                                        <td><%= event.orgemail %></td>
                                        <td><%= event.orgphone %></td>
                                        <td>
                                            <!-- Approve Button -->
                                            <form action="/update-event-status/<%= event.eventcode %>" method="POST" style="display:inline;">
                                                <input type="hidden" name="status" value="approved">
                                                <button type="submit" class="form-button" style="background-color: #006813 ">Approve</button>
                                            </form>
                                            <!-- Decline Button -->
                                            <form action="/update-event-status/<%= event.eventcode %>" method="POST" style="display:inline;">
                                                <input type="hidden" name="status" value="declined">
                                                <button type="submit" class="form-button" style="background-color: #a30202 ">Decline</button>
                                            </form>
                                        </td>
                                        <td>
                                            <button class="form-button" onclick="toggleEditForm('<%= event.eventcode %>')">View/Edit</button>
                                        </td>
                                    </tr>
                                    <!-- Include the edit event form partial -->
                                    <%- include('partials/eventedit', { event: event }) %>
                                <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!--approved events-->
        <div class="bigcard">
            <div class="card-header">Approved Events</div>
            <div class="card-content">
                <div class="container">
                    <% if (error) { %>
                        <div class="error-message"><%= error %></div>
                    <% } %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Organization</th>
                                <th>Event Date(s)</th>
                                <th>Event Times</th>
                                <th>Event Address</th>
                                <th>Contact Name</th>
                                <th>Contact Email</th>
                                <th>Contact Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% events.forEach(event => { %>
                                <% if (event.status == 'approved') { %>
                                    <tr>
                                        <td><%= event.organization %></td>
                                        <td><%= new Date(event.eventstarttime).toLocaleDateString() %>    <% if (new Date(event.eventstarttime).toLocaleDateString() !== new Date(event.eventstoptime).toLocaleDateString()) { %>
                                            - <%= new Date(event.eventstoptime).toLocaleDateString() %>
                                        <% } %></td>
                                        <td>
                                            <%= new Date(event.eventstarttime).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true }).replace(/([APM]{2})$/, '') %>-
                                            <%= new Date(event.eventstoptime).toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: true }) %>
                                        </td>
                                        <td><%= event.eventaddress %>, <%= event.eventcity %>, <%= event.state_description %></td>
                                        <td><%= event.orgfirstname %> <%= event.orglastname %></td>
                                        <td><%= event.orgemail %></td>
                                        <td><%= event.orgphone %></td>
                                        <td>
                                            <form action="/update-event-status/<%= event.eventcode%>" method="POST">
                                                <select name="status" onchange="this.form.submit()">
                                                    <option value="pending" <%= event.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                                    <option value="approved" <%= event.status === 'approved' ? 'selected' : '' %>>Approved</option>
                                                    <option value="declined" <%= event.status === 'declined' ? 'selected' : '' %>>Declined</option>
                                                    <option value="completed" <%= event.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                                </select>
                                            </form>
                                        </td>
                                        <td>
                                            <button class="form-button" onclick="toggleEditForm('<%= event.eventcode %>')">View/Edit</button>
                                            <button class="form-button" onclick="toggleCompleteForm('<%= event.eventcode %>')">Complete</button>
                                        </td>
                                    </tr>

                                    <!-- Include the edit event form partial -->
                                    <%- include('partials/eventedit', { event: event }) %>

                                    <tr id="complete-form-<%= event.eventcode %>" style="display:none;" class="form-container">
                                        <td colspan="7">
                                            <form action="/complete-event/<%= event.eventcode %>" method="POST" class="edit-event-form">
                                                <label>Actual number of participants:</label>
                                                <input type="number" name="actualparticipation" value="<%= event.actualparticipation %>" placeholder="0">
                                                <p>Vests:
                                                    <label>Cut:</label>
                                                    <input type="number" name="vestcut" value="<%= event.vestcut %>" placeholder="0">
                                                    <label>Pinned:</label>
                                                    <input type="number" name="vestpin" value="<%= event.vestpin %>" placeholder="0">
                                                    <label>Sewn:</label>
                                                    <input type="number" name="vestsewn" value="<%= event.vestsewn %>" placeholder="0">
                                                <p>Collars:</p>
                                                    <label>Cut:</label>
                                                    <input type="number" name="collarcut" value="<%= event.collarcut %>" placeholder="0">
                                                    <label>Pinned:</label>
                                                    <input type="number" name="collarpin" value="<%= event.collarpin %>" placeholder="0">
                                                    <label>Sewn:</label>
                                                    <input type="number" name="collarsewn" value="<%= event.collarsewn %>" placeholder="0">
                                                <p>Envelopes:</p>
                                                    <label>Cut:</label>
                                                    <input type="number" name="envelopecut" value="<%= event.envelopecut %>" placeholder="0">
                                                    <label>Pinned:</label>
                                                    <input type="number" name="envelopepin" value="<%= event.envelopepin %>" placeholder="0">
                                                    <label>Sewn:</label>
                                                    <input type="number" name="envelopesewn" value="<%= event.envelopesewn %>" placeholder="0">
                                                <p>Pockets:</p>
                                                    <label>Cut:</label>
                                                    <input type="number" name="pocketcut" value="<%= event.pocketcut %>" placeholder="0">
                                                    <label>Pinned:</label>
                                                    <input type="number" name="pocketpin" value="<%= event.pocketpin %>" placeholder="0">
                                                    <label>Sewn:</label>
                                                    <input type="number" name="pocketssewn" value="<%= event.pocketssewn %>" placeholder="0">
                                                <p>Completed Vests:</p>
                                                    <label>X-Small:</label>
                                                    <input type="number" name="xscompleted" value="<%= event.xscompleted %>" placeholder="0">
                                                    <label>Small:</label>
                                                    <input type="number" name="scompleted" value="<%= event.scompleted %>" placeholder="0">
                                                    <label>Medium:</label>
                                                    <input type="number" name="mcompleted" value="<%= event.mcompleted %>" placeholder="0">
                                                    <label>Large:</label>
                                                    <input type="number" name="lcompleted" value="<%= event.lcompleted %>" placeholder="0">
                                                    <label>X-Large:</label>
                                                    <input type="number" name="xlcompleted" value="<%= event.xlcompleted %>" placeholder="0">
                                                    <label>XX-Large:</label>
                                                    <input type="number" name="xxlcompleted" value="<%= event.xxlcompleted %>" placeholder="0">
                                                    <label>XXX-Large:</label>
                                                    <input type="number" name="xxxlcompleted" value="<%= event.xxxlcompleted  %>" placeholder="0">
                                                    <label>XXX-Large:</label>
                                                    <input type="number" name="xxxxlcompleted" value="<%= event.xxxxlcompleted %>" placeholder="0">
                                                <button type="submit" class="form-button">Save Changes</button>
                                            </form>
                                        </td>
                                    </tr>

                                <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!--completed events-->
        <div class="bigcard">
            <div class="card-header">Completed Events</div>
            <div class="card-content">
                <div class="container">
                    <h1>Completed Events</h1>
                    <% if (error) { %>
                        <div class="error-message"><%= error %></div>
                    <% } %>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Organization</th>
                                <th>Event Date(s)</th>
                                <th>Event Times</th>
                                <th>Event Address</th>
                                <th>Contact Name</th>
                                <th>Contact Email</th>
                                <th>Contact Phone</th>
                                <th>Status</th>
                                <th>Actions</th>
