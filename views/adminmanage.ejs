<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Nav Bar -->
    <%- include("partials/adminnavbar") %>

    <div class="main-content">
        <div class="container">
            <h1>Admin Management - User List</h1>
            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>User Code</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Admin Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.usercode %></td>
                            <td><%= user.firstname %></td>
                            <td><%= user.lastname %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td><%= user.city %></td>
                            <td><%= user.statecode %></td>
                            <td>
                                <form action="/update-admin-status/<%= user.usercode %>" method="POST">
                                    <select name="is_admin" onchange="this.form.submit()">
                                        <option value="false" <%= user.is_admin ? '' : 'selected' %>>Not Admin</option>
                                        <option value="true" <%= user.is_admin ? 'selected' : '' %>>Admin</option>
                                    </select>
                                </form>
                            </td>
                            <td>
                                <form action="/delete-user/<%= user.usercode %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <%- include("partials/footer") %>
</body>
</html>
