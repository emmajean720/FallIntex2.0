<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="/images/BetterQualityLogo.png" type="image/png">
    <script>
        function toggleAdminForm() {
            const form = document.getElementById('create-admin-form');
            form.style.display = form.style.display === 'none' || form.style.display === '' ? 'block' : 'none';
        }
    </script>
</head>
<body>
    <!-- Nav Bar -->
    <%- include(user && user.is_admin ? "partials/adminnavbar" : (user ? "partials/volunteernavbar" : "partials/navbar")) %>

    <div class="main-content">
        <div class="container">
            <h1>Admin Management - User List</h1>
            <div class="search-container">
                <form method="GET" action="/adminmanage">
                    <input type="text" name="search" placeholder="Search User" value="<%= typeof search !== 'undefined' ? search : '' %>">
                    <button type="submit">Search</button>
                    <form method="GET" action="/adminmanage">
                        <button type="submit" class="reset-btn">Reset</button>
                    </form>
                </form>

            </div>
            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>

            <table class="admin-table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Admin Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.firstname %></td>
                            <td><%= user.lastname %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td><%= user.city %></td>
                            <td><%= user.state_abbr %></td> <!-- Using state_abbr here -->
                            <td>
                                <form action="/update-admin-status/<%= user.usercode %>" method="POST">
                                    <select name="is_admin" onchange="this.form.submit()">
                                        <option value="false" <%= user.is_admin ? '' : 'selected' %>>Not Admin</option>
                                        <option value="true" <%= user.is_admin ? 'selected' : '' %>>Admin</option>
                                    </select>
                                </form>
                            </td>
                            <td>
                                <form action="/delete-user/<%= user.usercode %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <!-- Create Admin Section -->
            <div class="create-admin-container">
                <button class="create-admin-button" onclick="toggleAdminForm()">Create New Admin</button>
                <form id="create-admin-form" class="create-admin-form" action="/create-admin" method="POST">
                    <label for="firstname">First Name:</label>
                    <input type="text" id="firstname" name="firstname" required>

                    <label for="lastname">Last Name:</label>
                    <input type="text" id="lastname" name="lastname" required>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>

                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone" required>

                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" required>

                    <label for="state_abbr">State:</label>
                    <select id="state_abbr" name="state_abbr" required>
                        <% for (let key in stateAbbreviations) { %>
                            <option value="<%= stateAbbreviations[key] %>"><%= stateAbbreviations[key] %></option>
                        <% } %>
                    </select>

                    <label for="login">Username:</label>
                    <input type="text" id="login" name="login" required>

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>

                    <button type="submit">Create Admin</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include("partials/footer") %>

    <script>
        // format phone number when its entered - Kylee Brown
        const phoneInput = document.getElementById('phone');

        phoneInput.addEventListener('input', (e) => {
            let value = e.target.value.replace(/\D/g, ''); // Remove all non-numeric characters
            if (value.length > 10) value = value.slice(0, 10); // Limit to 10 digits

            // Format the value as (123) 456-7890
            if (value.length > 6) {
                value = `(${value.slice(0, 3)}) ${value.slice(3, 6)}-${value.slice(6)}`;
            } else if (value.length > 3) {
                value = `(${value.slice(0, 3)}) ${value.slice(3)}`;
            } else if (value.length > 0) {
                value = `(${value}`;
            }

            e.target.value = value; // Update the input value with the formatted string
        });
    </script>
</body>
</html>
