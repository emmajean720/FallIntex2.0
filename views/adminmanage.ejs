<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <style>
        /* Custom styles for the Admin Page */
        .create-admin-container {
            margin-top: 30px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .create-admin-button {
            background-color: #008080;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 20px;
        }
        .create-admin-button:hover {
            background-color: #005F5F;
        }
        .create-admin-form {
            display: none;
            margin-top: 20px;
        }
        .create-admin-form label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
        }
        .create-admin-form input {
            width: calc(100% - 20px);
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }
        .create-admin-form button {
            background-color: #008080;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 15px;
        }
        .create-admin-form button:hover {
            background-color: #005F5F;
        }
    </style>
    <script>
        function toggleAdminForm() {
            const form = document.getElementById('create-admin-form');
            form.style.display = form.style.display === 'none' || form.style.display === '' ? 'block' : 'none';
        }
    </script>
</head>
<body>
    <!-- Nav Bar -->
    <%- include("partials/adminnavbar") %>

    <div class="main-content">
        <div class="container">
            <h1>Admin Management - User List</h1>
            <% if (error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Admin Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.firstname %></td>
                            <td><%= user.lastname %></td>
                            <td><%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td><%= user.city %></td>
                            <td><%= user.state_abbr %></td> <!-- Updated to use state_abbr -->
                            <td>
                                <form action="/update-admin-status/<%= user.usercode %>" method="POST">
                                    <select name="is_admin" onchange="this.form.submit()">
                                        <option value="false" <%= user.is_admin ? '' : 'selected' %>>Not Admin</option>
                                        <option value="true" <%= user.is_admin ? 'selected' : '' %>>Admin</option>
                                    </select>
                                </form>
                            </td>
                            <td>
                                <form action="/delete-user/<%= user.usercode %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit" class="btn delete-btn">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <!-- Create Admin Section -->
            <div class="create-admin-container">
                <button class="create-admin-button" onclick="toggleAdminForm()">Create New Admin</button>
                <form id="create-admin-form" class="create-admin-form" action="/create-admin" method="POST">
                    <label for="firstname">First Name:</label>
                    <input type="text" id="firstname" name="firstname" required>

                    <label for="lastname">Last Name:</label>
                    <input type="text" id="lastname" name="lastname" required>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>

                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone" required>

                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" required>

                    <label for="state_abbr">State:</label>
                    <input type="text" id="state_abbr" name="state_abbr" required>

                    <label for="login">Username:</label>
                    <input type="text" id="login" name="login" required>

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>

                    <button type="submit">Create Admin</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include("partials/footer") %>
</body>
</html>
