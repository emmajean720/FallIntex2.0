<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- Include Header -->
    <%- include("partials/navbar") %>

    <div class="login-container" id="login-form">
        <h1>Login</h1>
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit" class="form-btn">Login</button>
        </form>
        <p>Don't have an account?
            <button class="link" id="show-create-account-btn">Create one here</button>
        </p>
    </div>

    <div class="create-account-container" id="create-account-form" style="display: none;">
        <h1>Create Account</h1>
        <form action="/create-account" method="POST">
            <div class="form-group">
                <label for="firstname">First Name:</label>
                <input type="text" id="firstname" name="firstname" required>
            </div>

            <div class="form-group">
                <label for="lastname">Last Name:</label>
                <input type="text" id="lastname" name="lastname" required>
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="phone">Phone Number:</label>
                <input type="tel" id="phone" name="phone">
            </div>

            <div class="form-group">
                <label for="city">Home City:</label>
                <input type="text" id="city" name="city">
            </div>

            <div class="form-group">
                <label for="statecode">Home State:</label>
                <select id="statecode" name="statecode" required>
                    <option value="" disabled selected>-- Select State --</option>
                    <!-- State options remain the same -->
                </select>
            </div>

            <div class="form-group">
                <label for="discoveredcode">How did you find out about us?</label>
                <select id="discoveredcode" name="discoveredcode" required>
                    <option value="" disabled selected>-- Select --</option>
                    <!-- Discovered options remain the same -->
                </select>
            </div>

            <div class="form-group">
                <label for="skilllevelcode">How skilled are you at sewing?</label>
                <select id="skilllevelcode" name="skilllevelcode" required>
                    <option value="" disabled selected>-- Select --</option>
                    <!-- Skill level options remain the same -->
                </select>
            </div>

            <div class="form-group">
                <label for="commithours">Estimated hours you are able to volunteer per month:</label>
                <select id="commithours" name="commithours" required>
                    <!-- Hours options remain the same -->
                </select>
            </div>

            <div class="form-group">
                <label for="traveldistance">How far are you willing to travel for events? (miles)</label>
                <select id="traveldistance" name="traveldistance" required>
                    <!-- Distance options remain the same -->
                </select>
            </div>

            <div class="form-group">
                <input type="hidden" name="leading" value="false">
                <label for="leading">Would you be comfortable leading an event?
                    <input type="checkbox" id="leading" name="leading" value="true">
                </label>
            </div>

            <div class="form-group">
                <input type="hidden" name="newsletter" value="false">
                <label for="newsletter">Do you want to receive monthly newsletters with Turtle Shelter Project updates?
                    <input type="checkbox" id="newsletter" name="newsletter" value="true">
                </label>
            </div>

            <div class="form-group">
                <label for="login">Username:</label>
                <input type="text" id="login" name="login" required>
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>

            <div class="form-group">
                <label for="confirm-password">Confirm Password:</label>
                <input type="password" id="confirm-password" name="confirmpassword" required>
            </div>

            <input type="hidden" id="startdate" name="startdate" value="">
            <input type="hidden" name="admin" value="false">
            <button type="submit" class="form-btn">Create Account</button>
        </form>
        <p>Already have an account?
            <button class="link" id="show-login-btn">Login here</button>
        </p>
    </div>

    <script>
        // Toggle forms visibility on screen
        const loginForm = document.getElementById('login-form');
        const createAccountForm = document.getElementById('create-account-form');
        const showCreateAccountBtn = document.getElementById('show-create-account-btn');
        const showLoginBtn = document.getElementById('show-login-btn');
        
        showCreateAccountBtn.addEventListener('click', () => {
            loginForm.style.display = 'none';
            createAccountForm.style.display = 'block';
        });

        showLoginBtn.addEventListener('click', () => {
            createAccountForm.style.display = 'none';
            loginForm.style.display = 'block';
        });

        // Toggle forms visibility based on query parameters ( from other pages)
        document.addEventListener('DOMContentLoaded', () => {
        const params = new URLSearchParams(window.location.search);
        const formType = params.get('form');

        if (formType === 'create') {
            document.getElementById('login-form').style.display = 'none';
            document.getElementById('create-account-form').style.display = 'block';
        } else if (formType === 'login') {
            document.getElementById('create-account-form').style.display = 'none';
            document.getElementById('login-form').style.display = 'block';
    }
});

        // Generate the inline current date
        document.addEventListener('DOMContentLoaded', () => {
            const input = document.querySelector('#startdate');
            input.value = new Date().toISOString().split('T')[0];
        });
    </script>
</body>
</html>
