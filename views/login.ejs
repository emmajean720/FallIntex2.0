    <script>
        // Toggle forms visibility on screen
        const loginForm = document.getElementById('login-form');
        const createAccountForm = document.getElementById('create-account-form');
        const showCreateAccountBtn = document.getElementById('show-create-account-btn');
        const showLoginBtn = document.getElementById('show-login-btn');
        showCreateAccountBtn.addEventListener('click', () => {
            loginForm.style.display = 'none';
            createAccountForm.style.display = 'block';
        });
        showLoginBtn.addEventListener('click', () => {
            createAccountForm.style.display = 'none';
            loginForm.style.display = 'block';
        });
        // Toggle forms visibility based on query parameters ( from other pages)
        document.addEventListener('DOMContentLoaded', () => {
        const params = new URLSearchParams(window.location.search);
        const formType = params.get('form');
        if (formType === 'create') {
            document.getElementById('login-form').style.display = 'none';
            document.getElementById('create-account-form').style.display = 'block';
        } else if (formType === 'login') {
            document.getElementById('create-account-form').style.display = 'none';
            document.getElementById('login-form').style.display = 'block';
    }
});
        // Generate the inline current date
        document.addEventListener('DOMContentLoaded', () => {
            const input = document.querySelector('#startdate');
            input.value = new Date().toISOString().split('T')[0];
        });

        // format phone number when its entered - Kylee Brown
        const phoneInput = document.getElementById('phone');

        phoneInput.addEventListener('input', (e) => {
            let value = e.target.value.replace(/\D/g, ''); // Remove all non-numeric characters
            if (value.length > 10) value = value.slice(0, 10); // Limit to 10 digits

            // Format the value as (123) 456-7890
            if (value.length > 6) {
                value = `(${value.slice(0, 3)}) ${value.slice(3, 6)}-${value.slice(6)}`;
            } else if (value.length > 3) {
                value = `(${value.slice(0, 3)}) ${value.slice(3)}`;
            } else if (value.length > 0) {
                value = `(${value}`;
            }

            e.target.value = value; // Update the input value with the formatted string
        });

    // monday event handler
    document.addEventListener("DOMContentLoaded", () => {
    // Get references to all the checkboxes
    const morningCheckbox = document.getElementById("mm");
    const afternoonCheckbox = document.getElementById("ma");
    const eveningCheckbox = document.getElementById("me");
    const noneCheckbox = document.getElementById("mn");

    // Add event listener to the "None" checkbox
    noneCheckbox.addEventListener("change", () => {
        if (noneCheckbox.checked) {
            // Uncheck all other checkboxes
            morningCheckbox.checked = false;
            afternoonCheckbox.checked = false;
            eveningCheckbox.checked = false;
        }
    });

    // Add event listeners to the other checkboxes
    [morningCheckbox, afternoonCheckbox, eveningCheckbox].forEach((checkbox) => {
        checkbox.addEventListener("change", () => {
            if (checkbox.checked) {
                // Uncheck the "None" checkbox
                noneCheckbox.checked = false;
            }
        });
    });
});

