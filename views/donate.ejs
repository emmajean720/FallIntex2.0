<script>
const carousel = document.getElementById('carousel');
const items = Array.from(carousel.children);
const itemWidth = items[0].offsetWidth + 10; // Account for width and gap between items
const totalItems = items.length;
const clonedItems = items.map(item => item.cloneNode(true));

// Append the cloned items to the end of the carousel
clonedItems.forEach(item => carousel.appendChild(item));

let currentOffset = 0;
const scrollSpeed = 2.5; // Faster scroll speed

function animateScroll() {
  currentOffset += scrollSpeed;

  if (currentOffset >= itemWidth * totalItems) {
    // Temporarily remove transition and reset the offset
    carousel.style.transition = 'none';
    currentOffset = 0;

    // Force a reflow to apply the change instantly
    void carousel.offsetWidth;

    // Add a short delay before reapplying the transition
    setTimeout(() => {
      carousel.style.transition = 'transform 0.1s linear';
    }, 100); // Slightly increased delay to match higher speed
  }

  carousel.style.transform = `translateX(-${currentOffset}px)`;

  requestAnimationFrame(animateScroll);
}

// Start the animation loop
animateScroll();
</script>
