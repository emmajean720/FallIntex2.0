<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>AdminNavBar</title>
</head>
<body>
    <header>
        <div class="container">
            <div class="logo">
                <img src="/images/BetterQualityLogo.png" alt="Turtle Shelter Logo" class="logo-image">
                <span class="logo-title" onclick="location.href='/'">TURTLE SHELTER PROJECT</span>
            </div>
            <nav>
                <ul>
                    <li><a href="/admin">Home</a></li>
                    <li class="dropdown">
                        <a class="dropdown-link">Manage</a>
                        <ul class="dropdown-menu">
                            <li><a href="/adminmanage">Admins</a></li>
                            <li><a href="/eventmanage">Events</a></li>
                            <li><a href="/adminvest-receiver">Received Vest Form</a></li>
                        </ul>
                    </li>
                    <li><a href="/admincalendar">Calendar</a></li>
                    <li><a href="/logout" class="btn login-btn">Logout</a></li>
                </ul>
            </nav>
        </div>
    </header>
    
    <script>
    // dropdown.js
    document.addEventListener("DOMContentLoaded", () => {
        const dropdownLinks = document.querySelectorAll(".dropdown-link");
    
        dropdownLinks.forEach(link => {
            link.addEventListener("click", function (e) {
                e.preventDefault();
                const menu = this.nextElementSibling;
    
                // Toggle the dropdown visibility
                menu.style.display = menu.style.display === "block" ? "none" : "block";
            });
        });
    });
    </script> 
</body>
